<mvc:View controllerName="ehsm.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page title="Safety Engineer Portal - Login" showHeader="true">
        <content>
            <FlexBox alignItems="Center" justifyContent="Center" height="100%" direction="Column">
                <items>
                    <Panel width="400px" headerText="Please Login" class="sapUiResponsiveMargin">
                        <content>
                            <VBox class="sapUiSmallMargin">
                                <Label text="User ID" required="true"/>
                                <Input id="inpUserId" placeholder="Enter User ID" value="{/user_id}"/>
                                <Label text="Password" required="true"/>
                                <Input id="inpPassword" placeholder="Enter Password" type="Password" value="{/password}"/>
                                <Button text="Login" type="Emphasized" press="onLogin" class="sapUiSmallMarginTop" width="100%"/>
                            </VBox>
                        </content>
                    </Panel>
                </items>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
