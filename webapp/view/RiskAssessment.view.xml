<mvc:View controllerName="ehsm.controller.RiskAssessment"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="Risk Assessment" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="riskTable" items="{/Z898_RISK}" growing="true" growingThreshold="20" width="auto" class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Risks Overview" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField placeholder="Search Risks" width="30%"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Risk Key Ref"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Team Member"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Role"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Regulation"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Regulation URL"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Created On"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{RiskKeyRef}"/>
                            <Text text="{TeamMember}"/>
                            <Text text="{Role}"/>
                            <Text text="{Regulation}"/>
                            <Link text="{RegulationURL}" href="{RegulationURL}" target="_blank"/>
                            <Text text="{path: 'CreatedOn', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}"/>
                            <Text text="{CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
