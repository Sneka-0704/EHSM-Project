<mvc:View controllerName="ehsm.controller.IncidentManagement"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="Incident Management" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="incidentTable" items="{/Z898_INCIDENT}" growing="true" growingThreshold="20" width="auto" class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Incidents Overview" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField placeholder="Search Incidents" width="30%"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Incident ID"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Title"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Category"/></Column>
                    <Column><Text text="Status"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Group"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Plant ID"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Location"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Created On"/></Column>
                    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="Created By"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{IncidentID}"/>
                            <Text text="{Title}"/>
                            <Text text="{IncidentCategory}"/>
                            <ObjectStatus text="{IncidentRecordStatus}" state="{path: 'IncidentRecordStatus', formatter: '.formatter.statusState'}"/>
                            <Text text="{IncidentGroup}"/>
                            <Text text="{PlantID}"/>
                            <Text text="{Location}"/>
                            <Text text="{path: 'CreatedOn', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}"/>
                            <Text text="{CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
